<h1>Listing links</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  <% @players.each do |player| %>
      <tr>
		  <td><%= player.title %></td>
		  <td><%= player.url %></td>
		  <td><%= link_to 'Show', player %></td>
		  <% if player.user == current_user %>
		  <td><%= link_to 'Edit', edit_player_path(player) %></td>
		  <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

