<h1>Listing players</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Points</th>
      <th>Shoptechemail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.fullName %></td>
        <td><%= player.points %></td>
        <td><%= player.shoptechEmail %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
		<!-- TODO: Change to if statement to check if connected -->
		<td>Connect to User</td>
		<td>Add Points</td>
		<td>Remove Points</td>
		<td><%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>

